{
    "manifest_version": 3,
    "name": "Movistar+ Enhancer Pro",
    "version": "1.0",
    "description": "Control total de teclado para Movistar Plus",
    "content_scripts": [
        {
            "matches": ["*://ver.movistarplus.es/*"],
            "js": ["content.js"],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "permissions": ["storage"],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
